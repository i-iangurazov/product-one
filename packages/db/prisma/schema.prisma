generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  KITCHEN
  WAITER
  VENUE_ADMIN
  PLATFORM_OWNER
}

enum TableSessionStatus {
  OPEN
  CHECKOUT
  CLOSED
}

enum OrderStatus {
  NEW
  ACCEPTED
  IN_PROGRESS
  READY
  SERVED
  CANCELLED
}

enum PaymentStatus {
  CREATED
  PENDING
  PAID
  FAILED
  CANCELLED
}

model Venue {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  currency  String   @default("KGS")
  timezone  String   @default("Asia/Bishkek")
  address   String?
  isActive  Boolean  @default(true)

  menu       Menu?
  menuEvents MenuChangeEvent[]
  tables    Table[]
  categories MenuCategory[]
  menuItems MenuItem[]
  users     StaffUser[]
  platformUsers PlatformUser[]
  sessions  TableSession[]
  orders    Order[]
  payments  PaymentIntent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id        String   @id @default(cuid())
  venueId   String   @unique
  name      String   @default("Main menu")
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venue      Venue           @relation(fields: [venueId], references: [id])
  categories MenuCategory[]
  items      MenuItem[]
  events     MenuChangeEvent[]
}

model MenuChangeEvent {
  id        String   @id @default(cuid())
  menuId    String
  venueId   String
  type      String
  payload   Json
  version   Int
  createdAt DateTime @default(now())

  menu  Menu  @relation(fields: [menuId], references: [id])
  venue Venue @relation(fields: [venueId], references: [id])

  @@index([venueId, version])
  @@index([menuId, version])
  @@index([createdAt])
}

model Table {
  id        String  @id @default(cuid())
  venueId   String
  name      String  // e.g. "Стол 7"
  code      String  // короткий код для QR, уникален в рамках venue
  capacity  Int?
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venue     Venue   @relation(fields: [venueId], references: [id])
  sessions  TableSession[]
  orders    Order[]

  @@unique([venueId, code])
  @@index([venueId])
  @@index([venueId, createdAt])
  @@index([venueId, isActive])
}

model TableSession {
  id           String             @id @default(cuid())
  venueId      String
  tableId      String
  status       TableSessionStatus @default(OPEN)
  peopleCount  Int?
  openedAt     DateTime           @default(now())
  closedAt     DateTime?
  lastActiveAt DateTime           @default(now())
  stateVersion Int                @default(1)

  venue       Venue   @relation(fields: [venueId], references: [id])
  table       Table   @relation(fields: [tableId], references: [id])
  guests      GuestDevice[]
  cartItems   CartItem[]
  orders      Order[]
  payments    PaymentIntent[]
  splitPlans  SplitPlan[]

  @@index([venueId, tableId, status])
  @@index([lastActiveAt])
}

model GuestDevice {
  id          String   @id @default(cuid())
  sessionId   String
  deviceHash  String
  displayName String?
  joinedAt    DateTime @default(now())
  lastSeenAt  DateTime @default(now())

  session TableSession @relation(fields: [sessionId], references: [id])

  @@unique([sessionId, deviceHash])
  @@index([sessionId])
}

model MenuCategory {
  id        String @id @default(cuid())
  menuId    String
  venueId   String
  name      String
  color     String?
  sortOrder Int    @default(0)
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menu  Menu  @relation(fields: [menuId], references: [id])
  venue Venue @relation(fields: [venueId], references: [id])
  items MenuItem[]

  @@index([venueId, sortOrder])
  @@index([menuId, sortOrder])
}

model MenuItem {
  id           String  @id @default(cuid())
  menuId       String
  venueId      String
  categoryId   String
  name         String
  description  String?
  imageUrl     String?
  accentColor  String?
  price        Int     // хранить в минимальных единицах (сом = 1) или тыйын — единообразно
  isActive     Boolean @default(true)
  isInStock    Boolean @default(true)
  sortOrder    Int     @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  menu      Menu         @relation(fields: [menuId], references: [id])
  venue     Venue        @relation(fields: [venueId], references: [id])
  category  MenuCategory @relation(fields: [categoryId], references: [id])
  modifiers MenuModifierGroup[]
  cartItems CartItem[]

  @@index([venueId, categoryId, sortOrder])
  @@index([menuId, sortOrder])
}

model MenuModifierGroup {
  id         String @id @default(cuid())
  itemId     String
  name       String
  isRequired Boolean @default(false)
  minSelect  Int     @default(0)
  maxSelect  Int     @default(1)
  sortOrder  Int     @default(0)

  item    MenuItem            @relation(fields: [itemId], references: [id])
  options MenuModifierOption[]

  @@index([itemId, sortOrder])
}

model MenuModifierOption {
  id         String @id @default(cuid())
  groupId    String
  name       String
  priceDelta Int    @default(0)
  isActive   Boolean @default(true)
  sortOrder  Int     @default(0)

  group MenuModifierGroup @relation(fields: [groupId], references: [id])

  @@index([groupId, sortOrder])
}

model CartItem {
  id              String   @id @default(cuid())
  sessionId       String
  menuItemId      String
  qty             Int      @default(1)
  note            String?
  addedByDeviceHash String?
  unitPrice       Int
  itemName        String

  session   TableSession @relation(fields: [sessionId], references: [id])
  menuItem  MenuItem     @relation(fields: [menuItemId], references: [id])
  modifiers CartItemModifier[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sessionId, createdAt])
}

model CartItemModifier {
  id         String @id @default(cuid())
  cartItemId String
  optionId   String
  optionName String
  priceDelta Int

  cartItem CartItem @relation(fields: [cartItemId], references: [id])

  @@index([cartItemId])
}

model Order {
  id        String      @id @default(cuid())
  venueId   String
  sessionId String
  tableId   String
  status    OrderStatus @default(NEW)
  number    Int
  comment   String?

  acceptedAt DateTime?
  readyAt    DateTime?
  servedAt   DateTime?

  venue   Venue        @relation(fields: [venueId], references: [id])
  session TableSession @relation(fields: [sessionId], references: [id])
  table   Table        @relation(fields: [tableId], references: [id])
  items   OrderItem[]
  payments PaymentIntent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([venueId, status, createdAt])
  @@index([venueId, createdAt])
  @@index([sessionId])
}

model OrderItem {
  id         String @id @default(cuid())
  orderId    String
  menuItemId String
  qty        Int
  note       String?
  unitPrice  Int
  itemName   String

  order     Order    @relation(fields: [orderId], references: [id])
  modifiers OrderItemModifier[]
  allocations PaymentAllocation[]

  @@index([orderId])
}

model OrderItemModifier {
  id          String @id @default(cuid())
  orderItemId String
  optionId    String
  optionName  String
  priceDelta  Int

  orderItem OrderItem @relation(fields: [orderItemId], references: [id])

  @@index([orderItemId])
}

model PaymentIntent {
  id         String        @id @default(cuid())
  venueId    String
  sessionId  String
  orderId    String?
  splitPlanId String?
  sharesPaid Int?
  amount     Int
  status     PaymentStatus @default(CREATED)
  provider   String        @default("mock")
  payload    Json?

  venue      Venue        @relation(fields: [venueId], references: [id])
  session    TableSession @relation(fields: [sessionId], references: [id])
  order      Order?       @relation(fields: [orderId], references: [id])
  splitPlan  SplitPlan?   @relation(fields: [splitPlanId], references: [id])
  allocations PaymentAllocation[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([sessionId, status])
  @@index([venueId, status])
  @@index([splitPlanId])
}

model PaymentAllocation {
  id          String   @id @default(cuid())
  paymentId   String
  orderItemId String
  amountCents Int
  createdAt   DateTime @default(now())

  payment   PaymentIntent @relation(fields: [paymentId], references: [id])
  orderItem OrderItem     @relation(fields: [orderItemId], references: [id])

  @@unique([paymentId, orderItemId])
  @@index([orderItemId])
  @@index([paymentId])
}

model SplitPlan {
  id          String   @id @default(cuid())
  sessionId   String
  totalShares Int
  baseVersion Int
  locked      Boolean  @default(false)
  session     TableSession @relation(fields: [sessionId], references: [id])
  payments    PaymentIntent[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sessionId])
}

model PaymentQuote {
  id            String   @id @default(cuid())
  sessionId     String
  mode          String
  amount        Int
  stateVersion  Int
  splitPlanId   String?
  sharesToPay   Int?
  selectedItems Json?
  expiresAt     DateTime
  createdAt     DateTime @default(now())

  @@index([sessionId])
  @@index([expiresAt])
}

model PlatformUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         UserRole
  venueId      String?
  isActive     Boolean  @default(true)

  venue    Venue?            @relation(fields: [venueId], references: [id])
  sessions PlatformSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([venueId, role])
}

model PlatformSession {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String
  expiresAt  DateTime
  revokedAt  DateTime?

  user PlatformUser @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, expiresAt])
}

model StaffUser {
  id           String   @id @default(cuid())
  venueId      String
  role         UserRole
  name         String
  phone        String?  @unique
  email        String?  @unique
  passwordHash String?
  isActive     Boolean  @default(true)

  venue Venue @relation(fields: [venueId], references: [id])
  sessions StaffSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([venueId, role])
  @@index([venueId, isActive])
  @@index([venueId, role, isActive])
}

model StaffSession {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String
  expiresAt  DateTime
  revokedAt  DateTime?

  user StaffUser @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, expiresAt])
}

model IdempotencyKey {
  id          String   @id @default(cuid())
  scope       String
  key         String
  venueId     String?
  tableId     String?
  staffUserId String?
  sessionId   String?
  requestHash String
  responseJson Json?
  statusCode  Int?
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@unique([scope, key])
  @@index([expiresAt])
}
